{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <a href="{{ path('app_login') }}">Login</a>

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.firstname) }}<br>
    {{ form_row(registrationForm.lastname) }}<br>
    {{ form_row(registrationForm.duckname) }}<br>
    {{ form_row(registrationForm.email) }}<br>
    {{ form_row(registrationForm.plainPassword, {
        label: 'Password'
    }) }}<br>
    {{ form_row(registrationForm.agreeTerms) }}<br>

    <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    <br>
    <a href="{{ path('quack_index') }}">Return to Quack !</a>
{% endblock %}
